extends layout

block content
  h1= title
  - let onion=results 
  div(class="container-fluid")
  div(class="row")
   each on,index in onion
    div(class="col-sm-2" onclick =`buy(${index})`) #{on.onion_weight}, #{on.onion_price}, #{on.onion_color}

   script.
    function buy(i)
    {
      alert(`You purchased Item ${i+1}`)
    } 
